{% extends "parent.njk" %}

{% block content %}
<form class="form-horizontal" method="POST">
{{ csrfField }}
  <fieldset>
    <legend>Bejelentkezés</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email cím</label>
      <div class="col-lg-10">
        <input class="form-control" id="inputEmail" placeholder="Email megadása" type="text">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Jelszó</label>
      <div class="col-lg-10">
        <input class="form-control" id="inputPassword" placeholder="jelszó megadása" type="password">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Bejleentkezés</button>
      </div>
    </div>
  </fieldset>
</form>

{% endblock %}